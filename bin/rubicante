#!/usr/bin/env ruby

require 'rubicante/cli'

require 'trollop'

opts = Trollop::options do
  banner <<-EOS
A business natural language for Systems Administrators

Usage:
  rubicante [options]
where [options] are:
EOS
  
  opt :debug, "Turn debugging ON", :default => false
end

app = Rubicante::CLI.new(opts[:debug])
app.run
