# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/rubicante.rb'

Hoe.new('rubicante', Rubicante::VERSION) do |p|
  p.remote_rdoc_dir = '' # Release to root
  p.developer('Adam VanderHook', 'avanderhook@gmail.com')
  p.extra_deps << ['logging', '>= 0.9.7']
  p.extra_deps << ['trollop', '>= 1.13']
end

